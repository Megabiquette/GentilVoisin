<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/fragmentMessageListJobLayout"
        layout="@layout/item_jobs_recycler_view"/>

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentMessageListJobLayout"
        app:layout_constraintBottom_toTopOf="@id/fragmentMessageListInput"
        android:id="@+id/fragmentMessageListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:itemCount="10"
        tools:listitem="@layout/item_message_recycler_view" />

    <EditText
        android:id="@+id/fragmentMessageListInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/fui_transparent"
        android:hint="@string/message_enter_message"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLength="350"
        android:imeOptions="actionSend"
        android:maxLines="4"
        tools:ignore="Autofill"
        tools:targetApi="lollipop" />
</androidx.constraintlayout.widget.ConstraintLayout>
