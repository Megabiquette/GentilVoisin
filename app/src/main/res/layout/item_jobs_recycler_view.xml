<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/background_job_item"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small">

    <ImageView
        android:id="@+id/itemJobsAvatar"
        android:layout_width="@dimen/image_avatar_size"
        android:layout_height="@dimen/image_avatar_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/itemJobsType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:paddingHorizontal="7dp"
        android:paddingVertical="2dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/itemJobsAvatar"
        app:layout_constraintTop_toTopOf="@id/itemJobsAvatar"
        tools:background="@drawable/type_offer_circle"
        tools:text="O" />

    <TextView
        android:id="@+id/itemJobsCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:background="@drawable/background_category"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        app:layout_constraintStart_toEndOf="@id/itemJobsType"
        app:layout_constraintTop_toTopOf="@id/itemJobsAvatar"
        tools:text="Aide aux devoirs" />

    <TextView
        android:id="@+id/itemJobsDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemJobsCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemJobsCategory"
        tools:text="le 26/04/2019" />

    <TextView
        android:id="@+id/itemJobsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:maxLength="107"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/itemJobsAvatar"
        app:layout_constraintTop_toBottomOf="@id/itemJobsType"
        tools:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo." />

</androidx.constraintlayout.widget.ConstraintLayout>