<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">@dimen/app_name_size</item>
        <item name="fontFamily">@font/sweet_purple</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.SubTitle" parent="Text.Title">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="background">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="EditText">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="AddJobForm">
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="NavigationDrawer">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemTextColor">@color/white</item>
        <item name="menu">@menu/menu_drawer</item>
        <item name="headerLayout">@layout/nav_menu_header</item>
    </style>
</resources>
