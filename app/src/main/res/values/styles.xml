<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/app_name_size</item>
        <item name="fontFamily">@font/sweet_purple</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="background">@drawable/btn_shape_round_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/btn_shape_round_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="EditText">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/white</item>
    </style>

    <style name="AddJobForm">
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint"  tools:ignore="NewApi">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="NavigationDrawer" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/btn_shape_round_white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
